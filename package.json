{
  "name": "articon2-workspace",
  "version": "1.0.0",
  "description": "Articon Hackathon workspace with Next.js frontend and Express backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "start": "concurrently \"pnpm --filter frontend start\" \"pnpm --filter backend start\"",
    "start:prod": "concurrently \"pnpm --filter frontend start\" \"pnpm --filter backend start:prod\"",
    "type-check": "pnpm --filter backend type-check",
    "lint": "pnpm --filter backend lint",
    "clean": "pnpm --filter backend clean",
    "setup-db": "pnpm --filter backend setup-db",
    "create-admin": "pnpm --filter backend create-admin",
    "setup-tasks": "pnpm --filter backend setup-tasks",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.21.0"
}